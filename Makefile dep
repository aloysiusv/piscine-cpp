NAME		= Polymorphism

CC			= c++

FLAGS		= -Wall -Wextra -Werror -std=c++98 -MMD -MP

INC			= inc/colours.h		\
			  inc/Animal.hpp	\
			  inc/Dog.hpp		\
			  inc/Cat.hpp		\


SRCS		= srcs/main.cpp	 	\
			  srcs/Animal.cpp	\
			  srcs/Dog.cpp		\
			  srcs/Cat.cpp		\


OBJS		:=	$(addprefix ./objs/,$(SRCS:%.cpp=%.o))
DEP			=	$(addprefix ./objs/,$(OBJS:%.o=%.d))

all:		$(NAME)

-include $(DEP)

./objs/%.o: 	./srcs/%.cpp
				@mkdir -p $(@D)
				$(CC) $(FLAGS) -o $@ -c $<

$(NAME):	$(OBJS) $(INC)
			$(CC) $(FLAGS) -o $(NAME) $(OBJS)

clean:
			rm -rf objs/
			rm -rf deps/

fclean:		clean
			rm -rf $(NAME)

re:			fclean all

.PHONY:		all clean fclean re
